{% extends 'base.html.twig' %}
{# This template extends the base layout. #}

{% block title %}Account info{% endblock %}
{# Sets the page title to "Account info". #}

{% block body %}
    <div class="row justify-content-center">    {# Uses Bootstrap classes to center the content horizontally. #}
        <div class="col-auto">
            <h1 class="text-center">User info</h1>
            <div class="card p-3">
            {# Container with Bootstrap card styles and padding. #}
                <table class="table table-striped table-light table-hover">
                {# Creates a table with striped rows, light background, and hover effect. #}
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>          {# Displays the user's ID. #}
                        </tr>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ user.firstname }}</td>   {# Displays the user's first name. #}
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>    {# Displays the user's last name. #}
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>       {# Displays the user's email. #}
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            {# Displays the user's roles, encoded as JSON if they exist, otherwise shows an empty string. #}
                        </tr>
                        <tr>
                            <th>IsVerified</th>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                            {# Displays whether the user's email is verified, showing "Yes" or "No". #}
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            {# Displays the creation date of the user, formatted as 'Y-m-d H:i:s' if it exists, otherwise shows an empty string. #}
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            {# Displays the last update date of the user, formatted as 'Y-m-d H:i:s' if it exists, otherwise shows an empty string. #}
                        </tr>
                    </tbody>
                </table>
                <div class="btn-group w-100" role="group" aria-label="Basic example">
                {# Creates a button group with full width. #}
                    <a class="btn btn-dark" href="{{ path('app_front') }}">back to accueil</a>
                    {# Link to return to the homepage with a dark button. #}
                    <a class="btn btn-secondary" href="{{ path('app_user_edit_front', {'id': user.id}) }}">edit</a>
                    {# Link to edit the user's information with a secondary button. #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}