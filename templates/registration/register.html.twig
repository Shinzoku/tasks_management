{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class=" d-flex vh-100 justify-content-center  align-items-center">
        <div class="w-25 border border-1 border-dark p-5 rounded bg-secondary text-white">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>

            {# {{ form_start(registrationForm) }} #}
            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="d-grid gap-3">
                <div>
                    {# {{ form_row(registrationForm.email) }} #}
                    {{ form_label(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
                    {{ form_widget(registrationForm.email) }}
                </div>
                <div>
                    {# {{ form_row(registrationForm.plainPassword, { label: 'Password'}) }} #}
                    {{ form_label(registrationForm.password) }}
                    {{ form_errors(registrationForm.password) }}
                    {{ form_widget(registrationForm.password) }}
                </div>
                <div>
                    {# {{ form_row(registrationForm.firstname) }} #}
                    {{ form_label(registrationForm.firstname) }}
                    {{ form_errors(registrationForm.firstname) }}
                    {{ form_widget(registrationForm.firstname) }}
                </div>
                <div>
                    {# {{ form_row(registrationForm.lastname) }} #}
                    {{ form_label(registrationForm.lastname) }}
                    {{ form_errors(registrationForm.lastname) }}
                    {{ form_widget(registrationForm.lastname) }}
                </div>
                <div class="form-check mb-3">
                    {# {{ form_row(registrationForm.agreeTerms) }} #}
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
