{% extends 'base.html.twig' %}

{% block title %}TaskList{% endblock %}

{% block body %}
<div class="row justify-content-center">
<div class="col-auto">
    <h1 class="text-center">Task list info</h1>
    <div class="card p-3">
        <div class="card-body">
            <div class="row w-100">
                <h5 class="col-auto card-title">Id : {{ task_list.id }}</h5>
                <h5 class="col text-center card-title">{{ task_list.name }}</h5>
            </div>
            <h6 class="card-title mt-4">Description :</h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <div class="row justify-content-between">
                <p class="col fs-6 fst-italic">Created at : {{ task_list.createdAt ? task_list.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                <p class="col fs-6 fst-italic text-end">Updated at : {{ task_list.updatedAt ? task_list.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
            </div>
        </div>
        <table class="table table-white table-hover">
            <thead>
                <tr>
                    <th>Tasks</th>
                    <th>Assigned to</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td><a class="text-primary text-decoration-none" href="{{ path('app_task_show', {'id': task.id}) }}">{{ task.title }}</a></td>
                        {% if (task.user == null) and (task.user == null) %}
                            <td></td>
                        {% else %}
                            <td>{{ task.user.firstname }} {{ task.user.lastname }}</td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <div class="d-flex gap-3">
        <div class="btn-group w-100" role="group" aria-label="Basic example">
            <a class="btn btn-dark" href="{{ path('app_task_list_index') }}">back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_task_list_edit', {'id': task_list.id}) }}">edit</a>
        </div>
        <div>
            {{ include('task_list/_delete_form.html.twig') }}
        </div>
    </div>
    </div>
</div>
</div>
{% endblock %}
