{% extends 'base.html.twig' %}

{% block title %}Account info{% endblock %}

{% block body %}
<div class="row justify-content-center">
<div class="col-auto">
    <h1 class="text-center">Account info</h1>
    <table class="table table-dark table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>
    <div class="w-100 d-flex gap-3">
        <div class="btn-group w-100" role="group" aria-label="Basic example">
            <a class="btn btn-dark" href="{{ path('app_front') }}">back to accueil</a>
            <a class="btn btn-secondary" href="{{ path('app_user_edit_front', {'id': user.id}) }}">edit</a>
        </div>
    </div>
</div>
</div>
{% endblock %}