{% extends 'base.html.twig' %}

{% block title %}Send Email{% endblock %}

{% block body %}
    <h1 class="text-center">Send Email</h1>
    <div class=" d-flex flex-column vh-100  align-items-center">
        <div class="w-25 border border-1 border-dark p-5 rounded bg-secondary text-white">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="d-grid gap-3">
                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div>
                    {{ form_label(form.subject) }}
                    {{ form_widget(form.subject) }}
                </div>
                <div>
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                </div>
                <div class="form-check form-switch">
                    {{ form_widget(form.emailConfirmation) }}
                    {{ form_label(form.emailConfirmation, null) }}
                </div>
                <div class="d-flex justify-content-end">
                    {{ form_row(form.send) }}
                </div>
            </div>
            {{ form_end(form) }}
            <a class="btn btn-dark" href="{{ path('app_user_index') }}">back to list</a>
        </div>
    </div>
{% endblock %}
