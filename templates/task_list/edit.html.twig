{% extends 'base.html.twig' %}

{% block title %}Edit TaskList{% endblock %}

{% block body %}
    <div class=" d-flex flex-column vh-100 justify-content-center  align-items-center">
        <div class="w-25 border border-1 border-dark p-5 rounded bg-secondary text-white">
            <h1 class="text-center">Edit Task list</h1>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="d-grid gap-3">
                <div>
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'value': task_list.name} }) }}
                </div>
                <div>
                    {{ form_label(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, { 'attr': {'value': task_list.description} }) }}
                </div>
                <div class="d-flex justify-content-end">
                    {{ include('task_list/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </div>
            {{ form_end(form) }}
            <div class="row mt-3">
                <div class="col">
                    <a class="btn btn-dark" href="{{ path('app_task_list_index') }}">back to list</a>
                </div>
                <div class="col-3">
                    {{ include('task_list/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
