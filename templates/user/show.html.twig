{% extends 'base.html.twig' %}
{# This template extends the base layout. #}

{% block title %}User Info{% endblock %}
{# Sets the page title to "User Info". #}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-auto">

            <h1 class="text-center">User info</h1>

            {# Card containing the user's information table #}
            <div class="card p-3">
                <table class="table table-striped table-light table-hover">
                    <tbody>
                        {# Display the user's ID #}
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>

                        {# Display the user's first name #}
                        <tr>
                            <th>Firstname</th>
                            <td>{{ user.firstname }}</td>
                        </tr>

                        {# Display the user's last name #}
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>

                        {# Display the user's email #}
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>

                        {# Display the user's roles in JSON format if they exist #}
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>

                        {# Display whether the user's email is verified ('Yes' or 'No') #}
                        <tr>
                            <th>IsVerified</th>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        </tr>

                        {# Display the creation date of the user account in the specified format #}
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>

                        {# Display the last updated date of the user account #}
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
                {# Buttons section to return to the user list or edit the user details #}
                <div class="w-100 d-flex gap-3">
                    <div class="btn-group w-100" role="group" aria-label="Basic example">
                        <a class="btn btn-dark" href="{{ path('app_user_index') }}">back to list</a>
                        <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    </div>

                    {# Include the delete form for the user, which will render a button to delete the user #}
                    <div>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
