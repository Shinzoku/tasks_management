{% extends 'base.html.twig' %}
{# This template extends the base layout. #}

{% block title %}Edit Task List{% endblock %}
{# Sets the page title to "Edit Task List". #}

{% block body %}
    <div class=" d-flex flex-column vh-100 justify-content-center  align-items-center">
        <div class="w-25 border border-1 border-dark p-5 rounded bg-secondary text-white">

            <h1 class="text-center">Edit Task list</h1>

            {# Start the form with 'novalidate' attribute to handle validation manually #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="d-grid gap-3">

                {# Render label and input for 'name' field, pre-filling with current task_list data #}
                <div>
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'value': task_list.name} }) }}
                </div>

                {# Render label and input for 'description' field, pre-filling with current task_list data #}
                <div>
                    {{ form_label(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, { 'attr': {'value': task_list.description} }) }}
                </div>
                
                <div class="d-flex justify-content-end">
                    {# Include a form template for submit button with custom label #}
                    {{ include('task_list/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </div>
            {{ form_end(form) }}

            <div class="row mt-3">
                <div class="col">
                    {# Link to go back to the list of task_lists #}
                    <a class="btn btn-dark" href="{{ path('app_task_list_index') }}">back to list</a>
                </div>
                <div class="col-3">
                    {# Include the delete form template #}
                    {{ include('task_list/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
