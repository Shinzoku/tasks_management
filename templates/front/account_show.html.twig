{% extends 'base.html.twig' %}

{% block title %}Account info{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-auto">
        <h1 class="text-center">User info</h1>
        <div class="card p-3">
            <table class="table table-striped table-light table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>IsVerified</th>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="btn-group w-100" role="group" aria-label="Basic example">
                <a class="btn btn-dark" href="{{ path('app_front') }}">back to accueil</a>
                <a class="btn btn-secondary" href="{{ path('app_user_edit_front', {'id': user.id}) }}">edit</a>
            </div>
        </div>
    </div>
</div>
