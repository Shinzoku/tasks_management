{% extends 'base.html.twig' %}
{# This template extends the base layout. #}

{% block title %}Edit User{% endblock %}
{# Sets the page title to "Edit User". #}

{% block body %}
    <h1 class="text-center">Edit User</h1>

    <div class=" d-flex flex-column vh-100  align-items-center">
        <div class="w-25 border border-1 border-dark p-5 rounded bg-secondary text-white">

            {# Start the form with 'novalidate' attribute to handle validation manually #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="d-grid gap-3">

                {# Render label and input for 'firstname' field, pre-filling with current user data #}
                <div>
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname, { 'attr': {'value': user.firstname} }) }}
                </div>

                {# Render label and input for 'lastname' field, pre-filling with current user data #}
                <div>
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname, { 'attr': {'value': user.lastname} }) }}
                </div>

                {# Render label and input for 'email' field, pre-filling with current user data #}
                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'value': user.email} }) }}
                </div>

                {# Render checkboxes for roles #}
                <div class="d-flex flex-row">
                    <p>Roles :</p>
                    {% for role in form.roles %}
                        <div class="form-check">
                            {{ form_widget(role) }}
                            {{ form_label(role) }}
                        </div>
                    {% endfor %}
                </div>

                {# Render label and input for 'password' field with placeholder #}
                <div>
                    {{ form_label(form.password) }}
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password, { 'attr': {'placeholder': 'Leave blank to keep the current password'} }) }}
                </div>

                <div class="d-flex justify-content-end">
                    {# Include a form template for submit button with custom label #}
                    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </div>
            {{ form_end(form) }}
            
            <div class="row mt-3">
                <div class="col">
                    {# Link to go back to the list of users #}
                    <a class="btn btn-dark" href="{{ path('app_user_index') }}">back to list</a>
                </div>
                <div class="col-3">
                    {# Include the delete form template #}
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
