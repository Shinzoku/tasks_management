<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        {# Sets the title of the page, with "Accueil" as the default value if no other block overrides it. #}
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {# Sets a custom favicon for the page using an inline SVG. #}
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {# Links the stylesheets generated by Symfony's Webpack Encore for the "app" entry point. #}
            
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {# Includes Bootstrap 5 styles from a CDN. #}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# Adds the JavaScript files generated by Symfony's Webpack Encore for the "app" entry point. #}

            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {# Placeholder block for JavaScript import maps. #}
        {% endblock %}
    </head>
    <body>
        {% block menu %}
        {# Block for the navigation menu. Different menus are displayed based on the user's role. #}

        {% if is_granted('ROLE_ADMIN') %}
        {# If the user has the ROLE_ADMIN privilege, display the admin menu. #}

        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid d-flex justify-content-around">
            <div class="col">
                <a href="{{ path('app_front') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col">
                <a href="{{ path('app_user_show_front', {'id': app.user.id}) }}" class="text-decoration-none text-dark">My Account</a>
            </div>
            <div class="col">
                <a href="{{ path('app_user_index') }}" class="text-decoration-none text-dark">Users index</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_list_index_front') }}" class="text-decoration-none text-dark">Tasks lists</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_list_index') }}" class="text-decoration-none text-dark">Tasks lists admin</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_index_front') }}" class="text-decoration-none text-dark">My Tasks</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_index') }}" class="text-decoration-none text-dark">Tasks index admin</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_logout') }}" class="text-decoration-none btn btn-outline-dark">Logout</a>
            </div>
        </nav>
        {% elseif is_granted('ROLE_USER') %}
        {# If the user has the ROLE_USER privilege, display the user menu. #}

        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid d-flex justify-content-around">
            <div class="col">
                <a href="{{ path('app_front') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col">
                <a href="{{ path('app_user_show_front', {'id': app.user.id}) }}" class="text-decoration-none text-dark">My Account</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_list_index_front') }}" class="text-decoration-none text-dark">Tasks lists</a>
            </div>
            <div class="col">
                <a href="{{ path('app_task_index_front') }}" class="text-decoration-none text-dark">My Tasks</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_logout') }}" class="text-decoration-none btn btn-outline-dark">Logout</a>
            </div>
        </nav>
        {% else %}
        {# If the user is not logged in, display a simple menu with login option. #}

        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid d-flex justify-content-around">
            <div class="col">
                <a href="{{ path('app_front') }}" class="text-decoration-none text-dark">Accueil</a>
            </div>
            <div class="col text-end">
                <a href="{{ path('app_login') }}" class="text-decoration-none btn btn-outline-success">Login</a>
            </div>
        </nav>
        {% endif %}
        {% endblock %}
        
        {% block body %}
        {# Placeholder block for the main content of the page. #}
        {% endblock %}
    </body>
</html>
